(function ($, root, undefined) {

    $(function () {
        $('#eventModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var title = button[0].innerText;

            var date = button.parent().parent().children()[0].innerText;
            var venue = button.parent().parent().children()[2].innerText;
            var location = button.parent().parent().children()[3].innerText;
            var eventInfo = button.parent().find('.event-details')[0].innerHTML;
            // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
            // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $(this)
            modal.find('.modal-body h3').text(title);
            modal.find('.modal-body .event-content').html(eventInfo);
            modal.find('.modal-body .date').text(date);
            modal.find('.modal-body .venue').text(venue);
            modal.find('.modal-body .location').text(location);
        })

    }); /* end of function */

})(jQuery, this);